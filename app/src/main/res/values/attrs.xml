<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ProgressFloatingActionButton">
        <attr name="iconSrc" format="integer" />
        <attr name="fabSize" />
    </declare-styleable>

    <declare-styleable name="ProgressMaterialButton">
        <attr name="iconRes" format="integer" />
        <attr name="iconColor" format="integer" />
    </declare-styleable>

    <declare-styleable name="DashedDividerView">
        <attr name="dashGap" format="dimension" />
        <attr name="dashWidth" format="dimension" />
        <attr name="dashColor" format="reference|color" />
        <attr name="dashDirection" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="InfoButtonView">
        <attr name="messageRes" format="integer" />
    </declare-styleable>

    <declare-styleable name="StrokedTextView">
        <attr name="strokedTextColor" format="reference|color" />
        <attr name="strokeColor" format="reference|color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="textAppearance" format="reference" />
    </declare-styleable>

    <declare-styleable name="ProductBadgeView">
        <attr name="badgeCornerRadius" format="reference|dimension" />
        <attr name="badgeBackgroundColor" format="reference|color" />
        <attr name="badgeIconColor" format="reference|color" />
        <attr name="badgeIcon" format="reference" />
    </declare-styleable>

</resources>