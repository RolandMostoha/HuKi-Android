<resources>

    <style name="DefaultShapeAppearance">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="DefaultShapeAppearance.Surface">
        <item name="cornerSize">@dimen/default_corner_size_surface</item>
    </style>

    <style name="DefaultShapeAppearance.InputField">
        <item name="cornerSize">@dimen/default_corner_size_input</item>
    </style>

    <style name="DefaultShapeAppearance.InputField.OnMap">
        <item name="cornerSize">@dimen/default_corner_size_input_on_map</item>
    </style>

    <style name="DefaultShapeAppearance.Button">
        <item name="cornerSize">@dimen/default_corner_size_input</item>
    </style>

    <style name="DefaultShapeAppearance.BottomSheet">
        <item name="cornerSizeTopLeft">@dimen/default_corner_size_input</item>
        <item name="cornerSizeTopRight">@dimen/default_corner_size_input</item>
    </style>

    <style name="DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">@dimen/default_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/default_button_vertical_padding</item>
        <item name="android:textAppearance">@style/DefaultTextAppearance.SemiBold.Medium</item>
        <item name="shapeAppearance">@style/DefaultShapeAppearance.Button</item>
        <item name="iconPadding">@dimen/space_small</item>
        <item name="iconTint">@color/colorOnPrimary</item>
    </style>

    <style name="DefaultButton.Contained" />

    <style name="DefaultButton.Contained.Shadowless">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="DefaultButton.Contained.Shadowless.Primary">
        <item name="android:paddingTop">@dimen/space_medium</item>
        <item name="android:paddingBottom">@dimen/space_medium</item>
        <item name="strokeColor">@color/selector_button_stroke_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="DefaultButton.Contained.Shadowless.Primary.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="iconSize">@dimen/icon_size_extra_small</item>
    </style>

    <style name="DefaultButton.Contained.Shadowless.Secondary">
        <item name="android:paddingTop">@dimen/space_medium</item>
        <item name="android:paddingBottom">@dimen/space_medium</item>
        <item name="android:textColor">@color/selector_default_secondary_button_text_color</item>
        <item name="backgroundTint">@color/colorBackground</item>
        <item name="rippleColor">@color/colorStroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorStroke</item>
        <item name="iconTint">@color/colorPrimary</item>
    </style>

    <style name="DefaultButton.Contained.Shadowless.Secondary.TextOnly">
        <item name="android:paddingTop">@dimen/space_medium</item>
        <item name="android:paddingBottom">@dimen/space_medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorBackground</item>
        <item name="rippleColor">@color/colorStroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorStroke</item>
    </style>

    <style name="DefaultButton.Contained.Shadowless.Secondary.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="iconSize">@dimen/icon_size_extra_small</item>
    </style>

    <style name="DefaultButton.IconOnly" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingTop">@dimen/space_medium</item>
        <item name="android:paddingBottom">@dimen/space_medium</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:minWidth">@dimen/default_icon_only_button_size</item>
        <item name="android:minHeight">@dimen/default_icon_only_button_size</item>
        <item name="iconTint">@color/colorPrimaryIcon</item>
        <item name="iconSize">@dimen/icon_size_medium</item>
    </style>

    <style name="DefaultButton.IconOnly.Stroked">
        <item name="shapeAppearance">@style/DefaultShapeAppearance.Button</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorStroke</item>
        <item name="iconTint">@color/colorPrimary</item>
    </style>

    <style name="DefaultMaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="alertDialogStyle">@style/DefaultMaterialAlertDialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DefaultTextAppearance.SemiBold.Large
        </item>
        <item name="materialAlertDialogBodyTextStyle">@style/DefaultTextAppearance.Regular.Medium
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/DefaultDialogButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/DefaultDialogButton.Negative</item>
    </style>

    <style name="DefaultMaterialAlertDialog" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/DefaultShapeAppearance.Surface</item>
    </style>

    <style name="DefaultDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAppearance">@style/DefaultTextAppearance.SemiBold.Medium</item>
    </style>

    <style name="DefaultDialogButton.Positive" />

    <style name="DefaultDialogButton.Negative">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="DefaultCircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="trackThickness">@dimen/progress_fab_stroke_width</item>
    </style>

    <style name="DefaultCircularProgressIndicator.Small">
        <item name="indicatorSize">35dp</item>
    </style>

    <style name="DefaultBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/DefaultShapeAppearance.BottomSheet</item>
        <item name="android:backgroundTint">@color/colorBackground</item>
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior
        </item>
    </style>

    <style name="DefaultFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:elevation">@dimen/default_elevation_map_interactive_views</item>
        <item name="android:backgroundTint">@color/colorBackground</item>
        <item name="backgroundTint">@color/colorStrokeOnMap</item>
        <item name="tint">@color/colorPrimaryIconStrong</item>
        <item name="borderWidth">@dimen/home_stroke_width_on_map</item>
    </style>

    <style name="DefaultFloatingActionButton.Primary">
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/colorOnPrimary</item>
    </style>

    <style name="InfoViewTextStyle">
        <item name="android:textAppearance">@style/DefaultTextAppearance.SemiBold.Small</item>
        <item name="android:drawablePadding">@dimen/space_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="DragViewStyle">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@drawable/background_drag_view</item>
    </style>

    <style name="DefaultDashedDivider">
        <item name="dashGap">4dp</item>
        <item name="dashWidth">2dp</item>
        <item name="dashColor">@color/colorStrokeOnMap</item>
        <item name="dashDirection">horizontal</item>
    </style>

</resources>
