<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="DefaultTextAppearance.Regular">
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="DefaultTextAppearance.Regular.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="DefaultTextAppearance.Regular.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="DefaultTextAppearance.Regular.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="DefaultTextAppearance.SemiBold">
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="DefaultTextAppearance.SemiBold.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="DefaultTextAppearance.SemiBold.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="DefaultTextAppearance.SemiBold.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="DefaultTextAppearance.Bold">
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="DefaultTextAppearance.Bold.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

</resources>