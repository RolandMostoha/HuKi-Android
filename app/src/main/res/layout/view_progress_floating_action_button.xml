<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.FrameLayout">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        style="@style/DefaultFloatingActionButton"
        android:id="@+id/progressFabButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:src="@drawable/ic_hiking" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        style="@style/DefaultCircularProgressIndicator"
        android:id="@+id/progressFabProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:indicatorSize="@dimen/progress_fab_progress_bar_size_mini"
        android:elevation="@dimen/default_elevation_fab" />

</merge>