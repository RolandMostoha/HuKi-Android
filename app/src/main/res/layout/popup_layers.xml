<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="@dimen/space_extra_small"
    android:paddingHorizontal="@dimen/space_medium">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/DefaultTextAppearance.SemiBold.Medium"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/space_medium"
        android:text="@string/layers_base_layers_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/layersList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/space_small"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_layers_base"
        tools:itemCount="3" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/DefaultTextAppearance.SemiBold.Medium"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/space_small"
        android:text="@string/layers_hiking_layers_title" />

    <include layout="@layout/item_layers_hiking" />

</LinearLayout>