<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/homeSearchBarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_small"
            android:layout_marginStart="@dimen/space_large"
            android:layout_marginEnd="@dimen/space_large"
            app:cardBackgroundColor="@color/colorBackground"
            app:shapeAppearance="@style/DefaultShapeAppearance.InputField"
            app:strokeWidth="@dimen/home_search_bar_stroke_width"
            app:strokeColor="@color/colorStroke"
            app:cardElevation="@dimen/default_elevation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_search_bar_height"
                android:layout_marginStart="@dimen/space_large"
                android:animateLayoutChanges="true">

                <ImageView
                    android:id="@+id/homeAppIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_hiking"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:id="@+id/homeSearchBarInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/home_search_bar_title"
                    android:textColorHint="@color/colorSecondaryText"
                    android:layout_marginStart="@dimen/space_small"
                    android:layout_marginEnd="@dimen/space_small"
                    app:boxBackgroundColor="@color/colorBackground"
                    app:endIconMode="clear_text"
                    app:endIconDrawable="@drawable/ic_input_clear"
                    app:endIconTint="@color/colorPrimaryIcon"
                    app:layout_constraintStart_toEndOf="@id/homeAppIcon"
                    app:layout_constraintEnd_toStartOf="@id/homeSearchBarProgress"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/homeSearchBarInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/DefaultTextAppearance.Regular.Large" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.budiyev.android.circularprogressbar.CircularProgressBar
                    style="@style/DefaultCircularProgressBar"
                    android:id="@+id/homeSearchBarProgress"
                    android:layout_width="@dimen/home_search_bar_progress_size"
                    android:layout_height="@dimen/home_search_bar_progress_size"
                    android:layout_marginEnd="@dimen/space_large"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/homeSearchBarInputLayout"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <HorizontalScrollView
            android:id="@+id/homeLandscapeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_small"
            android:elevation="@dimen/default_elevation"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/homeSearchBarContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/homeLandscapeChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/space_large"
                android:paddingEnd="@dimen/space_large"
                android:clipToPadding="false"
                app:singleLine="true" />

        </HorizontalScrollView>

        <hu.mostoha.mobile.android.turistautak.views.ProgressFloatingActionButton
            android:id="@+id/homeLayerFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_medium"
            android:layout_marginStart="@dimen/space_large"
            android:layout_marginEnd="@dimen/space_large"
            android:elevation="@dimen/default_elevation"
            app:iconSrc="@drawable/ic_layers"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/homeLandscapeContainer" />

        <org.osmdroid.views.MapView
            android:id="@+id/homeMapView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|end"
        app:layout_behavior="@string/fab_transformation_sheet_behavior">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/DefaultFloatingActionButton"
            android:id="@+id/homeRoutesNearbyFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_medium"
            android:layout_marginBottom="@dimen/space_medium"
            android:layout_marginStart="@dimen/space_large"
            android:layout_marginEnd="@dimen/space_large"
            android:src="@drawable/ic_home_hiking_routes"
            android:visibility="invisible" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/DefaultFloatingActionButton.Primary"
            android:id="@+id/homeMyLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_medium"
            android:layout_marginBottom="35dp"
            android:layout_marginStart="@dimen/space_large"
            android:layout_marginEnd="@dimen/space_large"
            android:src="@drawable/ic_action_my_location" />

    </LinearLayout>

    <include layout="@layout/layout_bottom_sheet_place_details" />

    <include layout="@layout/layout_bottom_sheet_hiking_routes" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>