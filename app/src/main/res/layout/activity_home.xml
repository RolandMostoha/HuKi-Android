<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchBarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_small"
        android:layout_marginStart="@dimen/space_large"
        android:layout_marginEnd="@dimen/space_large"
        app:shapeAppearance="@style/DefaultShapeAppearance.InputField"
        app:strokeWidth="@dimen/home_search_bar_stroke_width"
        app:strokeColor="@color/colorStroke"
        app:cardElevation="@dimen/default_elevation_strong"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_search_bar_height"
            android:layout_marginStart="@dimen/space_large">

            <ImageView
                android:id="@+id/homeAppIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_hiking"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:id="@+id/homeSearchBarInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/home_search_bar_title"
                android:layout_marginStart="@dimen/space_small"
                android:layout_marginEnd="@dimen/space_small"
                app:boxBackgroundColor="@android:color/white"
                app:endIconMode="clear_text"
                app:endIconDrawable="@drawable/ic_clear"
                app:layout_constraintStart_toEndOf="@id/homeAppIcon"
                app:layout_constraintEnd_toStartOf="@id/homeSearchBarProgress"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/homeSearchBarInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/DefaultTextAppearance.SemiBold.Large" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.budiyev.android.circularprogressbar.CircularProgressBar
                style="@style/DefaultCircularProgressBar"
                android:id="@+id/homeSearchBarProgress"
                android:layout_width="@dimen/home_search_bar_progress_size"
                android:layout_height="@dimen/home_search_bar_progress_size"
                android:layout_marginEnd="@dimen/space_large"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <org.osmdroid.views.MapView
        android:id="@+id/homeMapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <hu.mostoha.mobile.android.turistautak.views.ProgressFloatingActionButton
        android:id="@+id/homeLayerFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_extra_large"
        app:iconSrc="@drawable/ic_layers"
        app:fabSize="mini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchBarContainer" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/homeMyLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_my_location"
        android:layout_marginEnd="@dimen/space_extra_large"
        android:layout_marginBottom="@dimen/space_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/homeBottomNavigation"/>

    <!-- Background shadow generated by https://inloop.github.io/shadow4android/ -->
    <!-- blur:8, color:#8f8f8f, fill:white, sideClipping: all except top -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/homeBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bottom_navigation_shadow"
        app:menu="@menu/menu_bottom_nav"
        app:itemTextAppearanceActive="@style/DefaultTextAppearance.Bold.Small"
        app:itemTextAppearanceInactive="@style/DefaultTextAppearance.SemiBold.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>