<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/placeCategoryChipCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:shapeAppearance="@style/DefaultShapeAppearance.VerticalChip"
    app:cardElevation="0dp"
    app:strokeColor="@color/colorStroke">

    <LinearLayout
        android:id="@+id/placeCategoryChipContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/space_extra_large"
        android:paddingVertical="@dimen/space_large">

        <ImageView
            android:id="@+id/placeCategoryChipImage"
            android:layout_width="@dimen/icon_size_extra_large"
            android:layout_height="@dimen/icon_size_extra_large"
            android:importantForAccessibility="no"
            tools:src="@drawable/ic_okt_routes_chip" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/placeCategoryChipTitle"
            style="@style/DefaultTextAppearance.SemiBold.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_small"
            tools:text="OKT" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/placeCategoryChipSubtitle"
            style="@style/DefaultTextAppearance.Regular.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_small"
            tools:text="Országos Kéktúra" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>