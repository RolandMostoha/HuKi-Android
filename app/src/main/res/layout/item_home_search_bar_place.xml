<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/homeSearchBarResultIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:importantForAccessibility="no"
        android:padding="@dimen/space_medium"
        tools:src="@drawable/ic_home_search_bar_type_relation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/space_medium"
        android:paddingBottom="@dimen/space_medium">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/searchBarResultPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textAppearance="@style/DefaultTextAppearance.SemiBold.Medium"
            tools:text="Dobogókő Szánkópálya" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/searchBarResultSecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textAppearance="@style/DefaultTextAppearance.Regular.Small"
            tools:text="2099 Pilisszentkereszt" />

    </LinearLayout>

</LinearLayout>
