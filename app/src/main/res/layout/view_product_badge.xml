<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.FrameLayout">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/productBadgeCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_small_medium"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:shapeAppearance="@style/DefaultShapeAppearance.Surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="@dimen/space_large">

            <ImageView
                android:id="@+id/productBadgeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                tools:src="@drawable/ic_product_squirrel" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/productBadgeTitle"
                style="@style/DefaultTextAppearance.SemiBold.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_medium"
                tools:text="MÃ³kus" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/productBadgeSubtitle"
                style="@style/DefaultTextAppearance.Regular.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_small_medium"
                android:visibility="gone"
                tools:text="500 HUF" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</merge>