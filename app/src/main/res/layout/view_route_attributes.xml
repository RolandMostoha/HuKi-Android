<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/routeAttributesContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_small"
    android:orientation="horizontal">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/routeAttributesTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_medium"
        android:drawableEnd="@drawable/ic_route_attributes_time"
        android:drawablePadding="@dimen/space_extra_small"
        android:gravity="center_vertical"
        android:textAppearance="@style/DefaultTextAppearance.SemiBold.Small"
        android:textColor="@color/colorRouteAttributesText"
        tools:text="00:51" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/routeAttributesDistanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_medium"
        android:drawableEnd="@drawable/ic_route_attributes_distance"
        android:drawablePadding="@dimen/space_extra_small"
        android:gravity="center_vertical"
        android:textAppearance="@style/DefaultTextAppearance.SemiBold.Small"
        android:textColor="@color/colorRouteAttributesText"
        tools:text="14 km" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/routeAttributesUphillText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_medium"
        android:drawableEnd="@drawable/ic_route_attributes_uphill"
        android:drawablePadding="@dimen/space_extra_extra_small"
        android:gravity="center_vertical"
        android:textAppearance="@style/DefaultTextAppearance.SemiBold.Small"
        android:textColor="@color/colorRouteAttributesText"
        tools:text="500 m" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/routeAttributesDownhillText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_route_attributes_downhill"
        android:drawablePadding="@dimen/space_extra_extra_small"
        android:gravity="center_vertical"
        android:textAppearance="@style/DefaultTextAppearance.SemiBold.Small"
        android:textColor="@color/colorRouteAttributesText"
        tools:text="300 m" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/routeAttributesWaypointCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_route_attributes_waypoint_counter"
        android:drawablePadding="@dimen/space_extra_small"
        android:gravity="center_vertical"
        android:textAppearance="@style/DefaultTextAppearance.SemiBold.Small"
        android:textColor="@color/colorRouteAttributesText"
        android:visibility="gone"
        tools:text="300 m" />

</LinearLayout>
