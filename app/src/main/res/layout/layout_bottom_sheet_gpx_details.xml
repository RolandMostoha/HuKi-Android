<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_large"
    app:behavior_hideable="true"
    app:layout_insetEdge="bottom">

    <View
        style="@style/DragViewStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_medium"
        android:layout_marginBottom="@dimen/space_medium" />

    <LinearLayout
        android:id="@+id/gpxDetailsContentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gpxDetailsImage"
            android:layout_width="@dimen/place_details_bottom_sheet_image_size"
            android:layout_height="@dimen/place_details_bottom_sheet_image_size"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/space_extra_large"
            android:layout_marginEnd="@dimen/space_medium"
            android:padding="@dimen/space_extra_small"
            android:src="@drawable/ic_gpx_details" />

        <LinearLayout
            android:id="@+id/gpxDetailsTextContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/gpxDetailsPrimaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textAppearance="@style/DefaultTextAppearance.SemiBold.Large"
                tools:text="Dera szurdok.gpx" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/gpxDetailsSecondaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_extra_small"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textAppearance="@style/DefaultTextAppearance.Regular.Medium"
                tools:text="Távolság: 50 km" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gpxDetailsCloseButton"
            style="@style/DefaultButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_medium"
            app:icon="@drawable/ic_bottom_sheet_clear" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gpxDetailsAltitudeDetailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_medium"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/gpxDetailsUphillText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_medium"
            android:drawableEnd="@drawable/ic_gpx_details_uphill"
            android:drawablePadding="@dimen/space_extra_small"
            android:gravity="center_vertical"
            android:textAppearance="@style/DefaultTextAppearance.Regular.Small"
            tools:text="500 m" />

        <View
            android:layout_width="@dimen/default_horizontal_separator_width"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/space_medium"
            android:background="@color/colorStroke" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/gpxDetailsDownhillText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_medium"
            android:drawableEnd="@drawable/ic_gpx_details_downhill"
            android:drawablePadding="@dimen/space_extra_small"
            android:gravity="center_vertical"
            android:textAppearance="@style/DefaultTextAppearance.Regular.Small"
            tools:text="300 m" />

        <View
            android:layout_width="@dimen/default_horizontal_separator_width"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/space_medium"
            android:background="@color/colorStroke" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/gpxDetailsAltitudeRangeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_medium"
            android:drawableEnd="@drawable/ic_gpx_details_altitude_range"
            android:drawablePadding="@dimen/space_extra_small"
            android:gravity="center_vertical"
            android:textAppearance="@style/DefaultTextAppearance.Regular.Small"
            tools:text="300 m - 800 m" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/gpxDetailsNavigateStartButton"
        style="@style/DefaultButton.Contained.Shadowless.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_medium"
        android:layout_marginEnd="@dimen/space_extra_large"
        android:layout_gravity="end"
        android:text="@string/gpx_details_bottom_sheet_navigate_start_button"
        app:icon="@drawable/ic_home_bottom_sheet_directions" />

</LinearLayout>
